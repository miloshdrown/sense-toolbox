<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:columnCount="1"
    android:padding="20dp"
    android:rowCount="2"
    android:background="@android:color/background_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:orientation="vertical" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="fill_horizontal" >

	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:contentDescription="@string/app_about"
	            android:src="@drawable/ic_launcher" />
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="center|left"
	            android:maxLines="1"
	            android:paddingLeft="20dp"
	            android:shadowColor="#FF202020"
	            android:shadowDx="0"
	            android:shadowDy="0"
	            android:shadowRadius="5"
	            android:text="@string/about_sense"
	            android:textColor="#FFEEEEEE"
	            android:textSize="50sp" />
        
        </LinearLayout>
        
        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center|left"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:shadowColor="#FF202020"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/about_toolbox"
            android:textColor="#FFEEEEEE"
            android:textSize="75sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="fill_horizontal|fill_vertical"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical|none" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="fill_horizontal"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/textViewVersion"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="0dp"
	            android:paddingBottom="10dp"
	            android:text="@string/about_version"
	            android:textSize="20sp" />
	
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="0dp"
	            android:text="@string/about_devs"
	            android:textSize="20sp" />
	
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingBottom="15dp"
	            android:paddingLeft="20dp"
	            android:paddingTop="10dp"
	            android:text="@string/about_devs_names"
	            android:textSize="18sp" />
	
	        <TextView
	            android:id="@+id/TextView02"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingBottom="10dp"
	            android:text="@string/about_thanks"
	            android:textSize="20sp" />
	        
	        <TextView
	            android:id="@+id/TextView03"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="fill"
	            android:paddingLeft="20dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="15dp"
	            android:text="@string/about_thanks_data"
	            android:textSize="18sp" />
	        
	        <TextView
	            android:id="@+id/TextView04"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingBottom="10dp"
	            android:text="@string/about_l10n"
	            android:textSize="20sp" />
	        
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="fill_horizontal" >
		        
		        <TextView
		            android:id="@+id/TextView4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="fill"
		            android:paddingLeft="20dp"
		            android:paddingTop="10dp"
		            android:text="@string/about_l10n_data_left"
		            android:textSize="18sp" />
		        
		        <TextView
		            android:id="@+id/TextView5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="fill"
		            android:paddingLeft="20dp"
		            android:paddingTop="10dp"
		            android:text="@string/about_l10n_data_right"
		            android:textSize="18sp" />
	        
	        </LinearLayout>
	
	    </LinearLayout>
        
    </ScrollView>

</GridLayout>
